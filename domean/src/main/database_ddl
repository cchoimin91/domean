
create database domean;


CREATE TABLE `MEMBER` (
	`MEMBER_SEQ` BIGINT NOT NULL,
	`MEMBER_ID` VARCHAR(50) NOT NULL,
	`MEMBER_PW` VARCHAR(255) NOT NULL,
	`MEMBER_NAME` VARCHAR(20) NOT NULL,
	`MEMBER_DELETEFLAG` CHAR(1) NOT NULL
)
COLLATE='utf8_general_ci'
;


CREATE TABLE `MEMBER_AUTH` (
	`MEMBER_SEQ` BIGINT NOT NULL,
	`MEMBER_AUTHORITY` VARCHAR(50) NOT NULL
)
COLLATE='utf8_general_ci'
;


CREATE TABLE `board` (
	`BOARD_SEQ` BIGINT(20) NOT NULL,
	`BOARD_TITLE` VARCHAR(100) NOT NULL,
	`BOARD_CONTENT` LONGTEXT NOT NULL,
	`BOARD_WRITERSEQ` BIGINT(20) NOT NULL,
	`BOARD_WRITE_DATE` DATETIME NOT NULL,
	`BOARD_UPDATE_DATE` DATETIME NOT NULL,
	`BOARD_UPDATE_MEMBERSEQ` BIGINT(20) NOT NULL,
	`BOARD_DELETEFLAG` CHAR(1) NOT NULL
)
COLLATE='utf8_general_ci'
;


CREATE TABLE `FILE` (
	`FILE_SEQ` BIGINT NOT NULL,
	`FILE_BOARDSEQ` BIGINT NOT NULL,
	`FILE_ORIGINAL_NAME` VARCHAR(255) NOT NULL,
	`FILE_NAME` VARCHAR(255) NOT NULL,
	`FILE_SIZE` BIGINT NOT NULL,
	`FILE_DELETEFLAG` CHAR(1) NOT NULL
)
COLLATE='utf8_general_ci'
;
