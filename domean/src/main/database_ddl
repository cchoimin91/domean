
create database domean;

CREATE TABLE `member` (
	`MEMBER_SEQ` BIGINT(20) NOT NULL AUTO_INCREMENT,
	`MEMBER_ID` VARCHAR(50) NOT NULL,
	`MEMBER_PW` VARCHAR(255) NOT NULL,
	`MEMBER_NAME` VARCHAR(20) NOT NULL,
	`MEMBER_DELETEFLAG` CHAR(1) NOT NULL,
	PRIMARY KEY (`MEMBER_SEQ`),
	INDEX `MEMBER_DELETEFLAG` (`MEMBER_DELETEFLAG`)
)
COLLATE='utf8_general_ci'
ENGINE=InnoDB
;


CREATE TABLE `member_auth` (
	`MEMBER_SEQ` BIGINT(20) NOT NULL,
	`MEMBER_AUTHORITY` VARCHAR(50) NOT NULL
)
COLLATE='utf8_general_ci'
ENGINE=InnoDB
;


CREATE TABLE `board` (
	`BOARD_SEQ` BIGINT(20) NOT NULL AUTO_INCREMENT,
	`BOARD_TITLE` VARCHAR(100) NOT NULL COLLATE 'ucs2_bin',
	`BOARD_CONTENT` LONGTEXT NOT NULL COLLATE 'ucs2_bin',
	`BOARD_WRITERSEQ` BIGINT(20) NOT NULL,
	`BOARD_WRITE_DATE` DATETIME NOT NULL,
	`BOARD_UPDATE_DATE` DATETIME NOT NULL,
	`BOARD_UPDATE_MEMBERSEQ` BIGINT(20) NOT NULL,
	`BOARD_DELETEFLAG` CHAR(1) NOT NULL COLLATE 'ucs2_bin',
	PRIMARY KEY (`BOARD_SEQ`),
	INDEX `BOARD_DELETEFLAG` (`BOARD_DELETEFLAG`)
)
COLLATE='ucs2_bin'
ENGINE=InnoDB
;


CREATE TABLE `file` (
	`FILE_SEQ` BIGINT(20) NOT NULL AUTO_INCREMENT,
	`FILE_BOARDSEQ` BIGINT(20) NOT NULL,
	`FILE_ORIGINAL_NAME` VARCHAR(255) NOT NULL,
	`FILE_NAME` VARCHAR(255) NOT NULL,
	`FILE_SIZE` BIGINT(20) NOT NULL,
	`FILE_DELETEFLAG` CHAR(1) NOT NULL,
	PRIMARY KEY (`FILE_SEQ`)
)
COLLATE='utf8_general_ci'
ENGINE=InnoDB
;
